<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="EasySave" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
            
        <Border Grid.Column="0" Background="White">
            
            <DockPanel>

                <DockPanel Margin="10,20,10,10">
                    <Image Source="Pictures/logoEasySave.png" Height="25px" Width="auto"/>
                    <Image Source="Pictures/iconMenu.png" Height="25px" Width="auto" Margin="93,0,0,0"/>
                </DockPanel>

                <DockPanel  Margin="10,10,10,10">
                    <Image Source="Pictures/iconHomeSelected.png" Height="15px" Width="auto" Margin="5,0,0,0"/>
                    <Button FontFamily="Segoe UI" FontWeight="Regular" Background="Transparent" BorderThickness="0" Margin="10,0,0,0" Foreground="#319af6">
                        Home
                    </Button>
                </DockPanel>
                
                <DockPanel  Margin="10,10,10,10">
                    <Image Source="Pictures/iconPlanSave.png" Height="15px" Width="auto" Margin="5,0,0,0"/>
                    <Button FontFamily="Segoe UI" FontWeight="Regular" Background="Transparent" BorderThickness="0" Margin="10,0,0,0" Foreground="#8b959d">
                        Plan a save
                    </Button>
                </DockPanel>

                <DockPanel  Margin="10,10,10,10">
                    <Image Source="Pictures/iconRunSave.png" Height="15px" Width="auto" Margin="5,0,0,0"/>
                    <Button FontFamily="Segoe UI" FontWeight="Regular" Background="Transparent" BorderThickness="0" Margin="10,0,0,0" Foreground="#8b959d">
                        Run a Save
                    </Button>
                </DockPanel>

                <DockPanel  Margin="10,10,10,10">
                    <Image Source="Pictures/iconLogs.png" Height="15px" Width="auto" Margin="5,0,0,0"/>
                    <Button FontFamily="Segoe UI" FontWeight="Regular" Background="Transparent" BorderThickness="0" Margin="10,0,0,0" Foreground="#8b959d">
                        Logs
                    </Button>
                </DockPanel>

                <DockPanel  Margin="10,10,10,10">
                    <Image Source="Pictures/iconRealTime.png" Height="15px" Width="auto" Margin="5,0,0,0"/>
                    <Button FontFamily="Segoe UI" FontWeight="Regular" Background="Transparent" BorderThickness="0" Margin="10,0,0,0" Foreground="#8b959d">
                        Real Time
                    </Button>
                </DockPanel>

                <DockPanel  Margin="10,10,10,10">
                    <Image Source="Pictures/iconShowSave.png" Height="15px" Width="auto" Margin="5,0,0,0"/>
                    <Button FontFamily="Segoe UI" FontWeight="Regular" Background="Transparent" BorderThickness="0" Margin="10,0,0,0" Foreground="#8b959d">
                        Show Save
                    </Button>
                </DockPanel>

                <Border BorderBrush="#8b959d" BorderThickness="0,0.5,0,0" Margin="0,40,0,10"/>
                
                <DockPanel  Margin="10,5,10,10">
                    <Image Source="Pictures/iconMoon.png" Height="15px" Width="auto" Margin="5,0,0,0"/>
                    <Button FontFamily="Segoe UI" FontWeight="Regular" Background="Transparent" BorderThickness="0" Margin="10,0,0,0" Foreground="#8b959d">
                        Darkmode
                    </Button>
                </DockPanel>
                <DockPanel  Margin="10,5,10,10">
                    <Image Source="Pictures/iconLanguage.png" Height="15px" Width="auto" Margin="5,0,0,0"/>
                    <Button FontFamily="Segoe UI" FontWeight="Regular" Background="Transparent" BorderThickness="0" Margin="10,0,0,0" Foreground="#8b959d">
                        Language
                    </Button>
                </DockPanel>
                <DockPanel  Margin="10,5,10,10">
                    <Image Source="Pictures/iconExit.png" Height="15px" Width="auto" Margin="5,0,0,0"/>
                    <Button FontFamily="Segoe UI" FontWeight="Regular" Background="Transparent" BorderThickness="0" Margin="10,0,0,0" Foreground="#8b959d">
                        Quit
                    </Button>
                </DockPanel>



            </DockPanel>
            
        </Border>

        <Border Grid.Column="1" Background="#f2f5fa">
            
        </Border>
    
    </Grid>
</Window>
