<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="EasySave" Height="475" Width="800" MinHeight="475px" MinWidth="800px">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
            
        <Border Grid.Column="0" Background="White">
            
            <StackPanel>

                <DockPanel Margin="10,20,10,10">
                    <Image Source="Pictures/logoEasySave.png" Height="25px" Width="auto"/>
                    <TextBlock FontFamily="Segoe UI" FontSize="15" FontWeight="Medium" Padding="10,0,0,0" Foreground="Black" VerticalAlignment="Center" Margin="15,0,0,0">EasySave</TextBlock>
                </DockPanel>

                <DockPanel  Margin="10,10,10,10">
                    <Button HorizontalAlignment="Left" Background="Transparent" BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Pictures/iconHomeSelected.png" Height="15px" Width="auto" Margin="4,0,0,0"/>
                            <TextBlock FontFamily="Segoe UI" FontWeight="Regular" Padding="15,0,0,0" Foreground="#319af6" >Home</TextBlock>
                        </StackPanel>
                    </Button>
                </DockPanel>

                <DockPanel  Margin="10,10,10,10">
                    <Button HorizontalAlignment="Left" Background="Transparent" BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Pictures/iconSaveDashboard.png" Height="15px" Width="auto" Margin="4,0,0,0"/>
                            <TextBlock FontFamily="Segoe UI" FontWeight="Regular" Padding="15,0,0,0" Foreground="#8b959d" >Save DashBoard</TextBlock>   
                        </StackPanel>
                    </Button>
                </DockPanel>


                <DockPanel  Margin="10,10,10,10">
                    <Button HorizontalAlignment="Left" Background="Transparent" BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Pictures/iconLogs.png" Height="15px" Width="auto" Margin="4,0,0,0"/>
                            <TextBlock FontFamily="Segoe UI" FontWeight="Regular" Padding="15,0,0,0" Foreground="#8b959d" >Logs</TextBlock>
                        </StackPanel>
                    </Button>
                </DockPanel>
                
                <DockPanel  Margin="10,10,10,10">
                    <Button HorizontalAlignment="Left" Background="Transparent" BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Pictures/iconRealTime.png" Height="15px" Width="auto" Margin="4,0,0,0"/>
                            <TextBlock FontFamily="Segoe UI" FontWeight="Regular" Padding="15,0,0,0" Foreground="#8b959d" >Real Time</TextBlock>
                        </StackPanel>
                    </Button>
                </DockPanel>

                
                <Border BorderBrush="#8b959d" BorderThickness="0,0.5,0,0" Margin="0,100,0,10"/>

                <DockPanel  Margin="10,10,10,10">
                    <Button HorizontalAlignment="Left" Background="Transparent" BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Pictures/iconMoon.png" Height="15px" Width="auto" Margin="4,0,0,0"/>
                            <TextBlock FontFamily="Segoe UI" FontWeight="Regular" Padding="15,0,0,0" Foreground="#8b959d" >DarkMode</TextBlock>
                        </StackPanel>
                    </Button>
                </DockPanel>

                <DockPanel  Margin="10,10,10,10">
                    <Button HorizontalAlignment="Left" Background="Transparent" BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Pictures/iconLanguage.png" Height="15px" Width="auto" Margin="4,0,0,0"/>
                            <TextBlock FontFamily="Segoe UI" FontWeight="Regular" Padding="15,0,0,0" Foreground="#8b959d" >Language</TextBlock>
                        </StackPanel>
                    </Button>
                </DockPanel>

                <DockPanel  Margin="10,10,10,10">
                    <Button HorizontalAlignment="Left" Background="Transparent" BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Pictures/iconExit.png" Height="15px" Width="auto" Margin="4,0,0,0"/>
                            <TextBlock FontFamily="Segoe UI" FontWeight="Regular" Padding="15,0,0,0" Foreground="#8b959d" >Quit</TextBlock>
                        </StackPanel>
                    </Button>
                </DockPanel>



            </StackPanel>
            
        </Border>

        <Border Grid.Column="1" Background="#f2f5fa">
            
        </Border>
    
    </Grid>
</Window>
